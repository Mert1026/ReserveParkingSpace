<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReserveParkingSpace_Mobile_.SpacesPage"
             Title="Your Spaces"
              Shell.TitleColor="White"
 Shell.ForegroundColor="White"
   Shell.BackgroundColor="#3a6bc8"
 BackgroundColor="White">
    <ScrollView>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border
        
            StrokeThickness="1"
            Stroke="Black"
            Grid.Row="0"
            StrokeShape="RoundRectangle 10"
            Padding="0"
            Margin="20,20,20,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Text="Space (18)" Margin="10,5,0,0" TextColor="Black" Grid.Row="0" FontFamily="Poppins" FontSize="18"/>
                        <Label Text="From (date) To (date)" Margin="10,5,0,10" TextColor="Gray" Grid.Row="1" FontFamily="Poppins" FontSize="16"/>
                    </Grid>
                    <ImageButton Source="bin.png" BackgroundColor="#FB1230" Grid.Column="1" WidthRequest="70" HeightRequest="70"/>
                </Grid>
           
        </Border>
            
           

        </Grid>
    </ScrollView>

</ContentPage>